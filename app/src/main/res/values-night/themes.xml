<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleWeather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/light_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?android:windowBackground</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="fontFamily">@font/poppins</item>


        <item name="tabDotColor">@color/very_light_gray</item>
        <item name="tabDotSelectedColor">@color/light_blue</item>

        <item name="mainViewsBackground">@color/very_dark_gray</item>

<!--        Text colors-->
        <item name="mainTitleTextColor">@color/white</item>

        <item name="titleTextColor">@color/light_gray</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="contentTextColor">@color/light_gray</item>
        <item name="highlightedTextColor">@color/white</item>
    </style>
</resources>