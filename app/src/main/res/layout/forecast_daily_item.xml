<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/forecast_image"
        android:layout_width="@dimen/forecast_image_size"
        android:layout_height="@dimen/forecast_image_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/weather_clouds" />

    <TextView
        android:id="@+id/forecast_time"
        style="@style/MediumSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/forecast_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Wednesday" />

    <TextView
        android:id="@+id/forecast_temp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:includeFontPadding="false"
        android:textAlignment="viewEnd"
        android:textColor="?attr/mainTitleTextColor"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/forecast_temp_min"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="+109°" />

    <TextView
        android:id="@+id/forecast_temp_min"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:includeFontPadding="false"
        android:textAlignment="viewEnd"
        android:textColor="?attr/mainTitleTextColor"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/forecast_pop"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="-200°" />

    <TextView
        android:id="@+id/forecast_pop"
        style="@style/MediumValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_drop"
        android:drawablePadding="2dp"
        android:includeFontPadding="false"
        app:drawableStartCompat="@drawable/ic_drop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="100%" />
</androidx.constraintlayout.widget.ConstraintLayout>