<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/forecast_image"
        android:layout_width="@dimen/forecast_image_size"
        android:layout_height="@dimen/forecast_image_size"
        android:layout_marginEnd="8dp"
        android:layout_weight="0"
        tools:src="@drawable/weather_clouds" />

    <TextView
        android:id="@+id/forecast_time"
        style="@style/MediumSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        tools:text="Wednesday" />

    <TextView
        android:id="@+id/forecast_temp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:includeFontPadding="false"
        android:textAlignment="viewEnd"
        android:textColor="?attr/mainTitleTextColor"
        android:textSize="14sp"
        tools:text="+109°" />

    <TextView
        android:id="@+id/forecast_temp_min"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:includeFontPadding="false"
        android:textAlignment="viewEnd"
        android:textColor="?attr/mainTitleTextColor"
        android:textSize="14sp"
        tools:text="-200°" />

    <TextView
        android:id="@+id/forecast_pop"
        style="@style/MediumValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableStart="@drawable/ic_drop"
        android:drawablePadding="2dp"
        android:includeFontPadding="false"
        app:drawableStartCompat="@drawable/ic_drop"
        tools:text="100%" />
</LinearLayout>