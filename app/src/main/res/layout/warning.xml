<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="162dp"
    android:background="@drawable/rectangle_rounded_11">


    <ImageView
        android:id="@+id/image_icon_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/rain_percent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rain_percent"
        app:srcCompat="@drawable/ic_warning" />

    <TextView
        android:id="@+id/rain_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:text="Warning"
        app:layout_constraintStart_toEndOf="@+id/image_icon_warning"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextYellowLabel" />

    <ImageView
        android:id="@+id/image_forecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/weather_rain" />

    <TextView
        android:id="@+id/text_rain_percent_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="% Rain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rain_percent"
        style="@style/TextGrayLabel" />

    <TextView
        android:id="@+id/text_rain_percent_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="@+id/text_rain_percent_title"
        app:layout_constraintStart_toStartOf="@+id/text_rain_percent_title"
        app:layout_constraintTop_toBottomOf="@+id/text_rain_percent_title"
        tools:text="58%"
        style="@style/TextGrayValue" />

    <TextView
        android:id="@+id/text_exp_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="60dp"
        android:text="Exp. time"
        style="@style/TextGrayLabel"
        app:layout_constraintEnd_toStartOf="@+id/image_forecast"
        app:layout_constraintTop_toBottomOf="@+id/rain_percent" />

    <TextView
        android:id="@+id/text_exp_time_value"
        style="@style/TextGrayValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="@+id/text_exp_time_title"
        app:layout_constraintStart_toStartOf="@+id/text_exp_time_title"
        app:layout_constraintTop_toBottomOf="@+id/text_exp_time_title"
        tools:text="02:00 PM" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="13dp"
        android:text="Expecting Rainfall"
        style="@style/TextYellowWarning"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>