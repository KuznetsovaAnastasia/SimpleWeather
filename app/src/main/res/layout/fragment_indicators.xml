<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_rounded_11"
    android:paddingTop="6dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/text_view_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        style="@style/TextGrayLabel"
        app:layout_constraintEnd_toEndOf="@id/text_view_time_value"
        app:layout_constraintStart_toStartOf="@id/text_view_time_value"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="11:25 am"
        style="@style/TextGrayValue"
        app:layout_constraintEnd_toStartOf="@+id/text_view_uv_value"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_time_label" />

    <TextView
        android:id="@+id/text_view_uv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="uv"
        style="@style/TextGrayLabel"
        app:layout_constraintEnd_toEndOf="@id/text_view_uv_value"
        app:layout_constraintStart_toStartOf="@id/text_view_uv_value"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_uv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="2dp"
        android:text="4"
        style="@style/TextGrayValue"
        app:layout_constraintEnd_toStartOf="@+id/text_view_rain_prob_value"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text_view_time_value"
        app:layout_constraintTop_toBottomOf="@id/text_view_uv_label" />

    <TextView
        android:id="@+id/text_view_rain_prob_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="% rain"
        style="@style/TextGrayLabel"
        app:layout_constraintEnd_toEndOf="@id/text_view_rain_prob_value"
        app:layout_constraintStart_toStartOf="@id/text_view_rain_prob_value"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_rain_prob_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="2dp"
        android:text="58%"
        style="@style/TextGrayValue"
        app:layout_constraintEnd_toStartOf="@+id/text_view_aq_value"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text_view_uv_value"
        app:layout_constraintTop_toBottomOf="@id/text_view_rain_prob_label" />

    <TextView
        android:id="@+id/text_view_aq_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aq"
        style="@style/TextGrayLabel"
        app:layout_constraintEnd_toEndOf="@id/text_view_aq_value"
        app:layout_constraintStart_toStartOf="@id/text_view_aq_value"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_aq_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="2dp"
        android:text="22"
        style="@style/TextGrayValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text_view_rain_prob_value"
        app:layout_constraintTop_toBottomOf="@id/text_view_aq_label" />

</androidx.constraintlayout.widget.ConstraintLayout>