<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Views color-->
    <attr name="mainViewsBackground" format="color" />

    <!--    Tabs color-->
    <attr name="tabDotColor" format="color" />
    <attr name="tabDotSelectedColor" format="color" />

    <!--    Text color-->
    <attr name="mainTitleTextColor" format="color" />
    <attr name="highlightedTextColor" format="color" />
    <attr name="contentTextColor" format="color" />

    <declare-styleable name="HorizonView">
        <attr name="sunrise_time" format="string" />
        <attr name="sunset_time" format="string" />
        <attr name="fontFamily" format="string" />
        <attr name="t" format="float" />
        <attr name="titleColor" format="reference|color" />
        <attr name="valueColor" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="MessageButton">
        <attr name="buttonDrawableEnd" format="reference" />
        <attr name="clickedDrawableEnd" format="reference" />
        <attr name="contentColor" format="reference|color" />
        <attr name="clickedContentColor" format="reference|color" />
        <attr name="buttonText" format="string" />
        <attr name="clickedText" format="string" />
    </declare-styleable>
</resources>