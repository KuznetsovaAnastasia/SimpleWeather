<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MediumValue">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?titleTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MediumSubtitle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">?subtitleTextColor</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="WarningSmall">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="WarningTitle">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SmallContent">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">?contentTextColor</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="HighlightedValue">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">?attr/highlightedTextColor</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MediumTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/mainTitleTextColor</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextGraySubtitleTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?subtitleTextColor</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MessageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">39dp</item>
        <item name="android:minWidth">110dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rectangle_dark_rounded_7</item>
        <item name="backgroundTint">?mainViewsBackground</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="EditTextSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/search_edittext</item>
        <item name="android:textColorHint">?titleTextColor</item>
        <item name="android:textColor">?attr/mainTitleTextColor</item>
        <item name="android:drawableEnd">@drawable/ic_search</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Degrees">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">?attr/mainTitleTextColor</item>
        <item name="android:textSize">70sp</item>
    </style>

    <style name="Location">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">?attr/mainTitleTextColor</item>
        <item name="android:textSize">30sp</item>
    </style>
</resources>